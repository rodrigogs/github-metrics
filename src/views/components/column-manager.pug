#column_manager.modal.fade(tabindex='-1' role='dialog' aria-labelledby='column_manager_label' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#column_manager_label.modal-title Columns
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') Ã—

      .modal-body
        table.table.table-responsive-md
          thead
            tr
              th(scope='col') Name
              th(scope='col') Color
              th(scope='col') Order
              th(scope='col') Visible
          tbody

      .modal-footer
        button#close_columns_modal.btn.btn-secondary(type='button' data-dismiss='modal') Close
        button#save_columns.btn.btn-primary(type='button') Save changes
