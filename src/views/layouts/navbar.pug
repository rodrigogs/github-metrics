nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
  a.navbar-brand(href='/')= app_name
  .collapse.navbar-collapse
    ul.navbar-nav.mr-auto

      if is_authenticated
        li.nav-item(class= ((current_url || '').startsWith('/sheet') && 'active'))
          a.nav-link(href='/sheet') Load spreadsheet
        li.nav-item(class= ((current_url || '').startsWith('/process') && 'active'))
          a.nav-link(href='/process') Run Process

    if is_authenticated
      a.navbar-brand(href='#' title=logged_user.name)
        img.rounded-circle(src=logged_user.picture width='29' height='29' alt='')
