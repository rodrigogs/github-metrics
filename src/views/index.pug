extends layouts/default

block stylesheets
  style.
    canvas {
      -moz-user-select: none;
      -webkit-user-select: none;
      -ms-user-select: none;
    }

block javascripts
  script(src='/static/javascript/dashboard.js')

block content
  .container
    .jumbotron
      h3 CFD

      form#cfd_form
        .form-row

          .form-group.col-md-6
            label(for='project_id') Project
            select.form-control#project_id(name='project_id' required)

          .form-group.col-md-3
            label(for='from_date') From date
            .input-group.date(data-provide='datepicker' data-date-format='dd/mm/yyyy')
              input.form-control#from_date(name='from_date' type='text' value= moment().startOf('month').format('DD/MM/YYYY'))
              .input-group-addon
                span.fa.fa-calendar

          .form-group.col-md-3
            label(for='to_date') To date
            .input-group.date(data-provide='datepicker' data-date-format='dd/mm/yyyy')
              input.form-control#to_date(name='to_date' type='text' value= moment().format('DD/MM/YYYY'))
              .input-group-addon
                span.fa.fa-calendar

        button.btn.btn-primary#load-cfd(type='submit') Load

      canvas#cfd
